[color "branch"]
    current = green reverse
    local = cyan
    remote = yellow
[color "diff"]
    frag = magenta bold
    meta = cyan bold
    new = green bold
    old = red bold
[color "status"]
    added = green
    changed = cyan
    untracked = yellow
[alias]
    ad = add
    aa = add --all
    ai = add --interactive
    br = branch
    cm = commit
    cs = commit --gpg-sign --signoff
    ca = commit --gpg-sign --signoff --amend
    co = checkout
    cb = checkout -b
    df = diff
    ds = diff --staged
    la = log -p -1 HEAD
    lg = log --all --graph --pretty=format:'%Cred%h%Creset -%C(auto)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
    st = status
    mg = merge
    ms = merge --gpg-sign --signoff
    pl = pull
    ps = push
    rb = rebase
    ri = rebase --interactive
    tg = tag
    ts = tag --sign
    rc = rm -r --cached
